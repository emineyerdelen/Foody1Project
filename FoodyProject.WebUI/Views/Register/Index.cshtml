@model RegisterDto
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title> Sağlıklı Yaşam Kayıt Paneli </title>

    <!-- Custom fonts for this template-->
    <link href="~/admin2/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/admin2/css/sb-admin-2.min.css" rel="stylesheet">

    <style>
        .center-container {
            min-height: 100vh;
        }
    </style>
</head>

<body class="bg-gradient-primary d-flex align-items-center justify-content-center">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card  o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Yeni Kullanıcı Kaydı</h1>
                            </div>

                            <form class="login-input" method="post" asp-action="Index" asp-controller="Register">

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control " placeholder="Adınız" asp-for="Name">
                                        <span asp-validation-for="Name" class="text-warning"></span>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control" placeholder=" Soyadınız" asp-for="Surname">
                                        <span asp-validation-for="Surname" class="text-warning"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control " placeholder=" Kullanıcı Adınız" asp-for="Username">
                                        <span asp-validation-for="Username" class="text-warning"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="email" class="form-control" placeholder="Mail Adresiniz" asp-for="Mail">
                                        <span asp-validation-for="Mail" class="text-warning"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="password" class="form-control " placeholder="Şifreniz" asp-for="Password">
                                        <span asp-validation-for="Password" class="text-warning"></span>
                                    </div>
                                     <div class="col-sm-6">
                                        <input type="password" class="form-control" placeholder="Tekrar Şifreniz" asp-for="ConfirmPassword">
                                        <span asp-validation-for="ConfirmPassword" class="text-warning"></span>
                                    </div> 
                                </div>

                                <button type="submit" class="btn btn-primary submit w-100">Kayıt Ol</button>
                                <hr>
                                <a href="index.html" class="btn btn-google btn-user btn-block">
                                    <i class="fab fa-google fa-fw"></i> Google ile Kaydol
                                </a>

                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="forgot-password.html">Şifreni Unuttun mu?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="/Login/Index/">Hesabın var mı ? Giriş Yap!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/admin2/vendor/jquery/jquery.min.js"></script>
    <script src="~/admin2/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin2/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/admin2/js/sb-admin-2.min.js"></script>

</body>

</html>
