@model List<ResultProductDto>





<div class="container my-5">
    <h2 class="mb-4">Ürünlerimiz</h2>

    <div class="d-flex flex-nowrap overflow-auto mb-4 pb-2">
         <button class="btn btn-outline-success me-2 category-btn active" data-category="Tümü">Tümü</button>
        <button class="btn btn-outline-success me-2 category-btn" data-category="Meyve">Meyve</button>
        <button class="btn btn-outline-success me-2 category-btn" data-category="Sebze">Sebze</button>
        <button class="btn btn-outline-success me-2 category-btn" data-category="Organik Gıdalar">Organik Gıdalar</button>
        <button class="btn btn-outline-success me-2 category-btn" data-category="Doğal Bakım Ürünleri">Doğal Bakım Ürünleri</button>
        <button class="btn btn-outline-success me-2 category-btn" data-category="Kurutulmuş Ürünler">Kurutulmuş Ürünler</button>
        <button class="btn btn-outline-success me-2 category-btn" data-category="Bitkisel Takviyeler">Bitkisel Takviyeler</button>

    </div>

    <div class="tab-content">
        <div id="tab-1" class="tab-pane fade show p-0 active">
            <div id="product-list" class="row g-4">
                @foreach (var item in Model)
                {
                    <div class="col-xl-3 col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="product-item">
                            <div class="position-relative bg-light overflow-hidden">
                                <img class="~/foody/img-fluid w-100" src="@item.ImageUrl" alt="">
                                <div class="bg-secondary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">New</div>
                            </div>
                            <div class="text-center p-4">
                                <a class="d-block h5 mb-2" href="">@item.ProductName</a>
                                <span class="text-primary me-1">@item.Price TL</span>
                                <span class="text-body text-decoration-line-through">@item.PreviousPrice</span>
                            </div>
                            <div class="d-flex border-top">
                                <small class="w-50 text-center border-end py-2">
                                    <a asp-controller="Product" asp-action="ProductDetails" asp-route-id="@item.ProductID" class="text-body"><i class="fa fa-eye text-primary me-2"></i>İncele</a>

                                </small>
                                <small class="w-50 text-center py-2">
                                    <a class="text-body" href=""><i class="fa fa-shopping-bag text-primary me-2"></i>Sepete Ekle</a>
                                </small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
