@model List<ResultBlogDto>
<div class="container-xxl py-5">
    <div class="container">
        <div class="section-header text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <h1 class="display-5 mb-3">Son Blog Yazılarımız</h1>
            <p>Sağlıklı yaşamın sırlarını keşfedin! Organik ürünlerle hayatınıza renk katmanın ipuçları ve lezzetli tarifler burada.</p>
        </div>
        <div class="row g-4">
            @foreach (var item in Model)
            {
           
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <img class="img-fluid" src="@item.BlogImageUrl" alt="">
                    <div class="bg-light p-4">
                        <p class="card-text mb-3">@item.BlogContent.Substring(0, item.BlogContent.Substring(0, 130).LastIndexOf(" "))... </p>
                        <a href="/Blog/BlogReadAll/@item.BlogID/" class="btn btn-primary read-m">Devamını Oku...</a>
                        <div class="text-muted border-top pt-4">
                            <small class="me-3"><i class="fa fa-user text-primary me-2"></i>@item.BlogAuthor</small>
                            <small class="me-3"><i class="fa fa-calendar text-primary me-2"></i>@item.BlogDate</small>
                        </div>
                    </div>
                </div>
    
            }
        </div>
    </div>
</div>