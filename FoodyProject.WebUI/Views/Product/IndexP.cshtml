@model List<GetProductDto>
@{
    ViewData["Title"] = "IndexP";
    Layout = "~/Views/UILayout/Index.cshtml";
    var currentCategory = ViewBag.CurrentCategory as string;
}



<div class="container my-5">
    <h2 class="mb-4">Ürünlerimiz</h2>

    <div class="d-flex flex-nowrap overflow-auto mb-4 pb-2">
        <a class="btn btn-outline-success me-2 @(currentCategory == "Tümü" ? "active" : "")" href="?category=Tümü">Tümü</a>
        <a class="btn btn-outline-success me-2 @(currentCategory == "Meyve" ? "active" : "")" href="?category=Meyve">Meyve</a>
        <a class="btn btn-outline-success me-2 @(currentCategory == "Sebze" ? "active" : "")" href="?category=Sebze">Sebze</a>
        <a class="btn btn-outline-success me-2 @(currentCategory == "Organik Gıdalar" ? "active" : "")" href="?category=Organik Gıdalar">Organik Gıdalar</a>
        <a class="btn btn-outline-success me-2 @(currentCategory == "Doğal Bakım Ürünleri" ? "active" : "")" href="?category=Doğal Bakım Ürünleri">Doğal Bakım Ürünleri</a>
        <a class="btn btn-outline-success me-2 @(currentCategory == "Kurutulmuş Ürünler" ? "active" : "")" href="?category=Kurutulmuş Ürünler">Kurutulmuş Ürünler</a>
        <a class="btn btn-outline-success me-2 @(currentCategory == "Bitkisel Takviyeler" ? "active" : "")" href="?category=Bitkisel Takviyeler">Bitkisel Takviyeler</a>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-xl-3 col-lg-4 col-md-6 wow fadeInUp">
                <div class="product-item">
                    <div class="position-relative bg-light overflow-hidden">
                        <img class="img-fluid w-100" src="@item.ImageUrl" alt="">
                        <div class="bg-secondary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">New</div>
                    </div>
                    <div class="text-center p-4">
                        <a class="d-block h5 mb-2">@item.ProductName</a>
                        <span class="text-primary me-1">@item.Price TL</span>
                    </div>
                    <div class="d-flex border-top">
                        <small class="w-50 text-center border-end py-2">
                            <a class="text-body" href="/Product/@item.Description"><i class="fa fa-eye text-primary me-2"></i>İncele</a>
                        </small>
                        <small class="w-50 text-center py-2">
                            <a class="text-body" href="#"><i class="fa fa-shopping-bag text-primary me-2"></i>Sepete Ekle</a>
                        </small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
