@model List<ResultStaffDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Personel İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Personel Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Personel ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz...
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Personel Adı</th>
									<th scope="col">Personel Başlığı</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.StaffID</td>
										<td>@item.Name</td>
										<td>@item.Title</td>
										<td><a href="/Staff/DeleteStaff/@item.StaffID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Staff/UpdateStaff/@item.StaffID" class="btn btn-outline-warning">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Staff/CreateStaff" class="btn btn-outline-primary">Yeni Personel Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
